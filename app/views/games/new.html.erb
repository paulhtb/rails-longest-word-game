<h1>New Game</h1>
<div class="letters">
  <% @letters.each do |letter|%>
  <div class="letter-container"><p><%= letter %></p></div>
  <% end %>
</div>

<div class="guess-form">
  <form action="/score" method="post">
  <input type="text" name="guess" placeholder="Type here your longest word" value="">
  <button type"submit">Play</button>
  <%= hidden_field_tag :game_letters, @letters%>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
